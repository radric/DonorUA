<resources>

    <!-- Base application theme. -->
    <style name="DonorUaTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/main_background</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="android:actionBarStyle">@style/DonorUaTheme.ActionBar.Main</item>

        <!-- Customize your theme here. -->
    </style>
    
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/DonorUaTheme.ActionBar.Main</item>
        <item name="android:windowBackground">@color/main_background</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DonorUaTheme.ActionBar.Settings</item>
    </style>

    <style name="DonorUaTheme.ActionBar.Settings" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/material_drawer_primary</item>
        <item name="android:height">56dp</item>
    </style>


    <style name="DonorUaTheme.ActionBar.Main" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/material_drawer_primary</item>
        <item name="android:displayOptions">showTitle|homeAsUp</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/material_drawer_primary</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="ListStyle">

    </style>
</resources>
